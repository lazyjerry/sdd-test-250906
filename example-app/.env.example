# ============================================
# Laravel 應用程式基本設定
# ============================================

# 應用程式名稱
APP_NAME=Laravel

# 應用程式執行環境 (local, staging, production)
APP_ENV=local

# 應用程式加密金鑰 (執行 php artisan key:generate 自動產生)
APP_KEY=

# 除錯模式 (生產環境請設為 false)
APP_DEBUG=true

# 應用程式網址
APP_URL=http://localhost

# ============================================
# 語言與地區設定
# ============================================

# 預設語言
APP_LOCALE=en

# 備用語言
APP_FALLBACK_LOCALE=en

# Faker 語言包 (用於測試資料產生)
APP_FAKER_LOCALE=en_US

# ============================================
# 系統維護設定
# ============================================

# 維護模式驅動
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI 伺服器工作進程數
PHP_CLI_SERVER_WORKERS=4

# Bcrypt 加密輪數 (數值越高越安全但效能較低)
BCRYPT_ROUNDS=12

# ============================================
# 日誌記錄設定
# ============================================

# 日誌頻道 (single, daily, slack, syslog, errorlog, monolog, custom, stack)
LOG_CHANNEL=stack

# 日誌堆疊驅動
LOG_STACK=single

# 廢棄功能警告頻道
LOG_DEPRECATIONS_CHANNEL=null

# 日誌記錄層級 (emergency, alert, critical, error, warning, notice, info, debug)
LOG_LEVEL=debug

# ============================================
# 資料庫連接設定
# ============================================

# 資料庫連接類型 (mysql, sqlite, pgsql, sqlsrv)
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# ============================================
# Session 會話設定
# ============================================

# Session 驅動 (file, cookie, database, apc, memcached, redis, array)
SESSION_DRIVER=database

# Session 存活時間 (分鐘)
SESSION_LIFETIME=120

# Session 是否加密
SESSION_ENCRYPT=false

# Session Cookie 路徑
SESSION_PATH=/

# Session Cookie 網域
SESSION_DOMAIN=null

# ============================================
# 廣播與檔案系統設定
# ============================================

# 廣播連接 (pusher, ably, redis, log, null)
BROADCAST_CONNECTION=log

# 檔案系統磁碟 (local, public, s3)
FILESYSTEM_DISK=local

# 佇列連接 (sync, database, beanstalkd, sqs, redis, null)
QUEUE_CONNECTION=database

# ============================================
# 快取設定
# ============================================

# 快取儲存方式 (file, array, database, redis, memcached)
CACHE_STORE=database
# CACHE_PREFIX=

# Memcached 主機
MEMCACHED_HOST=127.0.0.1

# ============================================
# Redis 設定
# ============================================

# Redis 客戶端 (phpredis, predis)
REDIS_CLIENT=phpredis

# Redis 主機
REDIS_HOST=127.0.0.1

# Redis 密碼
REDIS_PASSWORD=null

# Redis 連接埠
REDIS_PORT=6379

# ============================================
# 郵件設定
# ============================================

# 郵件傳送方式 (smtp, sendmail, mailgun, ses, postmark, log, array)
MAIL_MAILER=log
# 郵件協議 (null, tls, ssl)
MAIL_SCHEME=null

# 郵件伺服器主機
MAIL_HOST=127.0.0.1

# 郵件伺服器連接埠
MAIL_PORT=2525

# 郵件伺服器用戶名
MAIL_USERNAME=null

# 郵件伺服器密碼
MAIL_PASSWORD=null

# 寄件者 Email 地址
MAIL_FROM_ADDRESS="hello@example.com"

# 寄件者顯示名稱
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS 雲端服務設定
# ============================================

# AWS 存取金鑰 ID
AWS_ACCESS_KEY_ID=

# AWS 秘密存取金鑰
AWS_SECRET_ACCESS_KEY=

# AWS 預設區域
AWS_DEFAULT_REGION=us-east-1

# AWS S3 儲存桶名稱
AWS_BUCKET=

# AWS 是否使用路徑樣式端點
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# 前端建構工具設定
# ============================================

# Vite 應用程式名稱
VITE_APP_NAME="${APP_NAME}"

# ============================================
# 自定義設定 - 郵件驗證功能
# ============================================

# 是否需要郵件驗證 (true=需要驗證, false=不需要驗證)
# 設為 false 時，使用者註冊後可直接登入，不需要驗證 Email
REQUIRE_EMAIL_VERIFICATION=true
